	$array[$type]=$key[$num-1];
	break;

	case'rh':
	$key=array('ÛŒÚ©Ø´Ù†Ø¨Ù‡','Ø¯ÙˆØ´Ù†Ø¨Ù‡','Ø³Ù‡ Ø´Ù†Ø¨Ù‡','Ú†Ù‡Ø§Ø±Ø´Ù†Ø¨Ù‡','Ù¾Ù†Ø¬Ø´Ù†Ø¨Ù‡','Ø¬Ù…Ø¹Ù‡','Ø´Ù†Ø¨Ù‡');
	$array[$type]=$key[$num];
	break;

	case'sh':
	$key=array('Ù…Ø§Ø±','Ø§Ø³Ø¨','Ú¯ÙˆØ³ÙÙ†Ø¯','Ù…ÛŒÙ…ÙˆÙ†','Ù…Ø±Øº','Ø³Ú¯','Ø®ÙˆÚ©','Ù…ÙˆØ´','Ú¯Ø§Ùˆ','Ù¾Ù„Ù†Ú¯','Ø®Ø±Ú¯ÙˆØ´','Ù†Ù‡Ù†Ú¯');
	$array[$type]=$key[$num%12];
	break;

	case'mb':
	$key=array('Ø­Ù…Ù„','Ø«ÙˆØ±','Ø¬ÙˆØ²Ø§','Ø³Ø±Ø·Ø§Ù†','Ø§Ø³Ø¯','Ø³Ù†Ø¨Ù„Ù‡','Ù…ÛŒØ²Ø§Ù†','Ø¹Ù‚Ø±Ø¨','Ù‚ÙˆØ³','Ø¬Ø¯ÛŒ','Ø¯Ù„Ùˆ','Ø­ÙˆØª');
	$array[$type]=$key[$num-1];
	break;

	case'ff':
	$key=array('Ø¨Ù‡Ø§Ø±','ØªØ§Ø¨Ø³ØªØ§Ù†','Ù¾Ø§ÛŒÛŒØ²','Ø²Ù…Ø³ØªØ§Ù†');
	$array[$type]=$key[(int)($num/3.1)];
	break;

	case'km':
	$key=array('ÙØ±','Ø§Ø±','Ø®Ø±','ØªÛŒâ€','Ù…Ø±','Ø´Ù‡â€','Ù…Ù‡â€','Ø¢Ø¨â€','Ø¢Ø°','Ø¯ÛŒ','Ø¨Ù‡â€','Ø§Ø³â€');
	$array[$type]=$key[$num-1];
	break;

	case'kh':
	$key=array('ÛŒ','Ø¯','Ø³','Ú†','Ù¾','Ø¬','Ø´');
	$array[$type]=$key[$num];
	break;

	default:$array[$type]=$num;
  }
 }
 return($mod==='')?$array:implode($mod,$array);
}


/** Gregorian & Jalali (Hijri_Shamsi,Solar) date converter Functions
Author: JDF.SCR.IR =>> Download Full Version : http://jdf.scr.ir/jdf
License: GNU/LGPL _ Open Source & Free _ Version: 2.70 : [2017=1395]
--------------------------------------------------------------------
1461 = 365*4 + 4/4   &  146097 = 365*400 + 400/4 - 400/100 + 400/400
12053 = 365*33 + 32/4    &    36524 = 365*100 + 100/4 - 100/100   */

/*	F	*/
function gregorian_to_jalali($gy,$gm,$gd,$mod=''){
	list($gy,$gm,$gd)=explode('_',tr_num($gy.'_'.$gm.'_'.$gd));/* <= Extra :Ø§ÙŠÙ† Ø³Ø·Ø± ØŒ Ø¬Ø²Ø¡ ØªØ§Ø¨Ø¹ Ø§ØµÙ„ÙŠ Ù†ÙŠØ³Øª */
 $g_d_m=array(0,31,59,90,120,151,181,212,243,273,304,334);
 if($gy > 1600){
  $jy=979;
  $gy-=1600;
 }else{
  $jy=0;
  $gy-=621;
 }
 $gy2=($gm > 2)?($gy+1):$gy;
 $days=(365*$gy) +((int)(($gy2+3)/4)) -((int)(($gy2+99)/100)) +((int)(($gy2+399)/400)) -80 +$gd +$g_d_m[$gm-1];
 $jy+=33*((int)($days/12053));
 $days%=12053;
 $jy+=4*((int)($days/1461));
 $days%=1461;
 $jy+=(int)(($days-1)/365);
 if($days > 365)$days=($days-1)%365;
 if($days < 186){
  $jm=1+(int)($days/31);
  $jd=1+($days%31);
 }else{
  $jm=7+(int)(($days-186)/30);
  $jd=1+(($days-186)%30);
 }
 return($mod==='')?array($jy,$jm,$jd):$jy .$mod .$jm .$mod .$jd;
}

/*	F	*/
function jalali_to_gregorian($jy,$jm,$jd,$mod=''){
	list($jy,$jm,$jd)=explode('_',tr_num($jy.'_'.$jm.'_'.$jd));/* <= Extra :Ø§ÙŠÙ† Ø³Ø·Ø± ØŒ Ø¬Ø²Ø¡ ØªØ§Ø¨Ø¹ Ø§ØµÙ„ÙŠ Ù†ÙŠØ³Øª */
 if($jy > 979){
  $gy=1600;
  $jy-=979;
 }else{
  $gy=621;
 }
 $days=(365*$jy) +(((int)($jy/33))*8) +((int)((($jy%33)+3)/4)) +78 +$jd +(($jm<7)?($jm-1)*31:(($jm-7)*30)+186);
 $gy+=400*((int)($days/146097));
 $days%=146097;
 if($days > 36524){
  $gy+=100*((int)(--$days/36524));
  $days%=36524;
  if($days >= 365)$days++;
 }
 $gy+=4*((int)(($days)/1461));
 $days%=1461;
 $gy+=(int)(($days-1)/365);
 if($days > 365)$days=($days-1)%365;
 $gd=$days+1;
 foreach(array(0,31,((($gy%4==0) and ($gy%100!=0)) or ($gy%400==0))?29:28 ,31,30,31,30,31,31,30,31,30,31) as $gm=>$v){
  if($gd <= $v)break;
  $gd-=$v;
 }
 return($mod==='')?array($gy,$gm,$gd):$gy .$mod .$gm .$mod .$gd;
}

