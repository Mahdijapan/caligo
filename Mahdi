	$out.=substr($j_y,2,2);
	break;

	case'Y':
	$out.=$j_y;
	break;

	/* Time */
	case'H':
	$out.=$date[1];
	break;

	case'I':
	$out.=$date[0];
	break;

	case'l':
	$out.=($date[0]>9)?$date[0]:' '.(int)$date[0];
	break;

	case'M':
	$out.=$date[2];
	break;

	case'p':
	$out.=($date[1]<12)?'Ù‚Ø¨Ù„ Ø§Ø² Ø¸Ù‡Ø±':'Ø¨Ø¹Ø¯ Ø§Ø² Ø¸Ù‡Ø±';
	break;

	case'P':
	$out.=($date[1]<12)?'Ù‚.Ø¸':'Ø¨.Ø¸';
